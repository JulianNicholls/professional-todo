<% if @user.errors.any? %>
  <div class="errors">
    <h4>The user could not be saved due to these <%= pluralize(@user.errors.count, 'error') %>:</h4>
    <ol>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ol>
  </div>
<% end %>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: 'Enter your name', autofocus: true %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: 'Enter your email address' %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: 'Choose a password (min 6 characters)' %>
  </p>

  <p>
    <%= f.label :password_confirmation, 'Confirm Password' %>
    <%= f.password_field :password_confirmation, placeholder: 'Re-enter the password' %>
  </p>

  <%= f.submit (@user.new_record? ? 'Sign up' : 'Save Changes'), class: 'btn' %>
<% end %>
