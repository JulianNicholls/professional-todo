<h1 class="text-center">All Users</h1>

<% @users.each do |user| %>
  <article>
    <h3><%= user.name %></h3>
    <p>Email Address: <%= user.email %></p>
    <div class="actions">
      <%= link_to 'Edit', edit_user_path(user), class: 'btn' %>
      <%= link_to 'Delete', user, class: 'btn', method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </article>
<% end %>
